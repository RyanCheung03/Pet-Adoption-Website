<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="icon" type="image/x-icon" href="./images/favicon.ico">
    <script type="text/javascript" src="javascript.js"></script>
</head>
<body>
    <%- include('./partials/header.ejs') %>
    <div class="container">
        <%- include('./partials/nav.ejs') %>
        <div class="content">
            <div style = "text-align: center; font-size: 2vw; font-weight: bold; padding: 20px;">Login</div>
            <div class="login">
                <form action="/login" method="POST" id="login">
                    <input type="text" name="usernameLogin" placeholder="Enter username:" id="usernameLogin"> <br><br>
                    <input type="password" name="passwordLogin" placeholder="Enter password:" id="passwordLogin"> <br><br>
                    <input type="submit" value="Submit">
                    <input type="reset" value="Reset">
                </form>
                <div id="messageAreaLogin">
                    <% if (message) { %>
                        <p><%= message %></p>
                    <% } %>   
                </div>
            </div>
        </div>
    </div>
    <script>
        document.getElementById("login").addEventListener('submit', validateLogin);
    </script>
</body>
</html>